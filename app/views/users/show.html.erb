<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span2">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span6">
    <% if @user.comments.any? %>
      <h3>Comments (<%= @user.comments.count %>)</h3>
      <ol class="comments">
        <%= render @comments %>
      </ol>
      <%= will_paginate @comments %>
    <% end %>
  </div>
</div>