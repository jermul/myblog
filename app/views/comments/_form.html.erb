<div class="row">
  <div class="span6 offset1">
    <%= form_for([@post, @post.comments.build]) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
  	<%= f.text_area :content, rows: 4, placeholder: "Up to 400 chars..." %>

  	<%= f.submit "submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>