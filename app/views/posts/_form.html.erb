<% @post.tags.build %>
<%= form_for(@post) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="row">
    <div class="span6 offset1">
  
      <%= f.label :title %><br />
      <%= f.text_field :title %>

      <%= f.label :content %><br />
      <%= f.text_area :content %>

      <%= render partial: 'tags/form', locals: {form: f} %>
      <div class="actions">
        <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

