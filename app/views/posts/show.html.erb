<% provide(:title, @post.title) %>
<div>
  <h1><%= @post.title %></h1>
  <p class="lead"><%= @post.content %></p>
  <p><%= join_tags(@post) %></p>
</div>
<div>
  <h2>Comments:</h2>
  <%= render @post.comments %>
</div>
<div>
  <h2>Add a comment:</h2>
  <%= render "comments/form" %>
</div>
<br />

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
