<% provide(:title, @post.title) %>

<h5><%= @post.title %></h5>
<span class="timestamp">
  Posted on <%= (@post.created_at).strftime "%B %d, %Y" %>
  | Tags: <%= raw join_tags(@post) %>
</span>
<p class="lead"><%= @post.content %></p>
<div class="span8">
  <div id = "disqus_thread">
    <%= disqus_thread.html_safe %>
  </div>
</div>