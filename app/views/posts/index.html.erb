<div class="center">
  <% if admin? %>
    <%= link_to 'New blog post', new_post_path, class: "btn btn-large" %>
  <% end %>
</div><br />

<% @posts.each do |post| %>
  <div id="eachpost">
    <h1><%= link_to post.title, post %></h1>
  </div>
  <p>
    <%= truncate(strip_tags(post.content), length: 380) %>
    <% if admin? %>
      <div class="pull-right">
        <%= link_to 'Edit', edit_post_path(post) %> |
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div><br />
    <% end %>
  </p>
<% end %>